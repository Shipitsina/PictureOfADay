<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.gb.shipitsina.pictureofaday">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PictureOfADay">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PictureOfADay.NoActionBar"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.view.api.ApiActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PictureOfADay.NoActionBar"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.view.api.ApiBottomActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PictureOfADay.NoActionBar"
            android:exported="true">
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>